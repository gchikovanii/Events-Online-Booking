@using ItAcademy.Application.Events.Response;
@model EventResponse

@{
    ViewData["Title"] = "Event";
}
<div class="row">
    <div class="col-md-5 offset-2">
        <div class="card mb-3" style="max-width: 940px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title d-flex justify-content-between">
                                @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.Image" alt="No-Image" style="float: left; width: 210px;
                         height: 260px; object-fit:cover" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text"><b>Price: </b>@Model.Price</p>
                        <p class="card-text"><b>Quantity: </b>@Model.Quantity</p>
                        <p class="card-text"><b>Category: </b>@Model.Quantity</p>
                        <p class="card-text"><b>Location: </b>@Model.Location</p>
                        <p class="card-text"><b>Category: </b>@Model.Quantity</p>
                        <p class="card-text"><b>Start Date: </b>@Model.StartDate.ToString("dd MMM yy")</p>
                        <p class="card-text"><b>End Date: </b>@Model.EndDate.ToString("dd MMM yy")</p>
                        <p class="card-text ">
                            <b>Status: </b>
                            @if (DateTime.Now >= @Model.StartDate && DateTime.Now <= Model.EndDate)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span>
                            }
                            else if (DateTime.Now > Model.EndDate)
                            {
                                <span class="badge bg-danger text-white">EXPIRED</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">UPCOMING</span>
                            }
                        </p>
                        <p class="card-text">
                            <b>Description: </b>
                            @Model.Description
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text d-flex justify-content-between">
                            <a class="btn btn-outline-primary" asp-action="Index">
                                Back To List
                            </a>
                            <a class="btn btn-success text-white float-right">
                                <i class="bi bi-cart-plus">
                                </i> Buy (Price @Model.Price.ToString("c"))
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
